<div class="container">
  <h1>Index</h1>


  <% @posts.each do |post| %>
    <%= link_to post_path(post) do %>
      <div class='card-post'>
        <div class="card-post-infos">
            <div>
              <h2><%= post.address %></h2>
              <p><%= post.description %></p>
            </div>
        </div>
      </div>
    <% end %>
  <% end %>


  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

