<%= content_for(:navbar_class, "navbar-home") %>

<div class="search-container">
  <div class="search-left row justify-content-center align-content-center">
    <div class="search-form col-5">
      <h3 class="text-center mb-3"> Please specify <br>your<span style="color:#5538EE"> search</span></h3>

      <%= simple_form_for @search do |f| %>
        <%= f.input :frequency,
          label: 'How often do you want to be notified?',
          as: :radio_buttons,
          collection_wrapper_tag: 'div',
          collection_wrapper_class: 'category-wrapper',
          item_wrapper_class: 'category-item',
          input_html: {class: 'category-selector'},
          collection: Search::OPTIONS %>
        <%#= f.input :frequency,
          as: :check_boxes,
          collection: ["Immediately", "Hourly", "Once a day"],
          label: 'How often do you want to be notified?' %>
        <%= f.input :preferred_district,
          placeholder: 'Neighborhood',
          label: false,
          input_html: { class: 'form-control-lg' } %>
        <%= f.input :category,
          prompt: 'Type',
          collection: ["Studio", "Apartment", "Private room", "Shared room", "House"],
          label: false,
          input_html: { class: 'form-control-lg' } %>
        <%#= f.input :room,
          prompt: 'Rooms',
          collection: [1,2,3,4,'5 or more'],
          label: false,
          input_html: { class: 'form-control-lg' } %>
        <%= f.input :min_size,
          prompt: 'Size in sm²',
          collection: ["> 20 sm²", "> 40 sm²", "> 60 sm²", "> 80 sm²", "> 100 sm²" ],
          label: false,
          input_html: { class: 'form-control-lg' } %>
        <%= f.input :max_price,
          placeholder: 'Max price in €',
          label: false,
          input_html: { class: 'form-control-lg' } %>
        <%= f.button :submit, 'Submit',
          class: 'btn-primary btn-block btn-lg mt-4' %>
      <% end %>
    </div>

  </div>
  <div class="search-right">
  </div>
</div>

