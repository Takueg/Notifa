<div class="index-container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="search-list mb-0">Your search <span style="color:#5538EE">lists.</span></h3>
  </div>
  <small class="lists-count text-muted">
    <% if @searches.count == 1 %>
      <%= @searches.count %> list
    <% else %>
     <%= @searches.count %> lists
    <% end %>
    </small>
<hr>
  <div class="row my-3">
    <% @searches.each do |search| %>
        <% images = search.posts.pluck(:image_urls).flatten %>
        <div class="col-12 col-sm-6 col-md-4 mb-3">
          <%= link_to posts_path, class:'text-decoration-none' do %>
          <div class="searches-card bg-white shadow">
            <div class="image-grid mt-3">
              <% if images.count > 2 %>
                <div class="large-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= images[0] %>')"></div>
                <div class="small-images">
                  <div class="small-image-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= images[1]%>')"></div>
                  <div class="small-image-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= images[2]%>')"></div>
                </div>
              <% elsif images.count == 2 %>
                <div class="large-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= images[0] %>')"></div>
                <div class="small-images">
                  <div class="small-image-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= images[1]%>')"></div>
                  <div class="small-image-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "no_image_available.svg" %>')"></div>
                </div>
              <% elsif images.count == 1 %>
                <div class="large-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= images[0] %>')"></div>
                <div class="small-images">
                  <div class="small-image-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "no_image_available.svg" %>')"></div>
                  <div class="small-image-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "no_image_available.svg" %>')"></div>
                </div>
              <% else %>
                <div class="large-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "no_image_available.svg" %>')"></div>
                <div class="small-images">
                  <div class="small-image-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "no_image_available.svg" %>')"></div>
                  <div class="small-image-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "no_image_available.svg" %>)"></div>
                </div>
              <% end %>

            </div>
            <div class="p-3 d-flex flex-column">
              <% if search.title == "Berlin, " %>
                <p class="search-district text-decoration-none"><span class="text-muted font-weight-normal">All posts in <%= search.city %></span></p>
              <% else %>
                <p class="search-district text-decoration-none"><%= search.title %><span class="text-muted font-weight-normal">, <%= search.city %></span></p>
              <% end %>


              <%# if search.category == nil %>
                <!-- <p class="search-district text-decoration-none"><span class="text-muted font-weight-normal">All posts in <%= search.city %></span></p> -->
              <%# elsif search.title == nil %>
                <!-- <p class="search-district text-decoration-none"><span class="text-muted font-weight-normal">Search for <%= search.category %> in <%= search.city %></span></p> -->
              <%# else %>
                <!-- <p class="search-district text-decoration-none"><%= search.title %><span class="text-muted font-weight-normal">, <%= search.city %></span></p> -->
              <%# end %>

          <% end %>
              <div class="d-flex align-items-end justify-content-between">
                <small class="text-muted flex-grow-1"><%= search.posts.count %> listings</small>
                <!-- <button id="delete-sweet-alert" class="btn btn-danger">Delete</button> -->
                <%#= link_to "delete", search_path(search), method: :delete, id: "delete-link", class: "hidden" %>
                <div class="flex-shrink-0">
                  <%#= render "search_toggle", search: search %>
                  <%= link_to search_path(search), method: :delete, class: 'btn btn-black filter-white', data: { confirm: 'Are you sure you want to delete this list?' } do %>
                    <i class="far fa-trash-alt"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
